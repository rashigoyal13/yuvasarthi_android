<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".register">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:src="@drawable/logo" />



            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="20dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/whiteback"
                    android:padding="24dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:text="Create Account  "
                android:textSize="25sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/user1"
                android:layout_width="310dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/edittext_bkg"
                android:drawableLeft="@drawable/ic_baseline_person_24"
                android:drawablePadding="10dp"
                android:hint="Full Name"

                android:padding="10dp" />

            <EditText
                android:id="@+id/con1"
                android:layout_width="310dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:background="@drawable/edittext_bkg"
                android:drawableLeft="@drawable/ic_baseline_call_24"
                android:drawablePadding="10dp"
                android:hint="Mobile"
                android:inputType="number"
                android:padding="10dp" />

            <EditText
                android:id="@+id/email1"
                android:layout_width="310dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:background="@drawable/edittext_bkg"
                android:drawableLeft="@drawable/ic_baseline_email_24"
                android:drawablePadding="10dp"
                android:hint="Email"
                android:inputType="textEmailAddress"
                android:padding="10dp" />

            <EditText
                android:id="@+id/sp1"
                android:layout_width="310dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:background="@drawable/edittext_bkg"
                android:drawableLeft="@drawable/ic_baseline_lock_24"
                android:drawablePadding="10dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:padding="10dp" />

            <EditText
                android:id="@+id/cp1"
                android:layout_width="310dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:background="@drawable/edittext_bkg"
                android:drawableLeft="@drawable/ic_baseline_lock_open_24"
                android:drawablePadding="10dp"
                android:hint=" Confirm Password"
                android:inputType="textPassword"
                android:padding="10dp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/signup_bldgrp1"
                            android:layout_width="150dp"
                            android:layout_height="45dp"
                            android:layout_gravity="center"
                            android:layout_marginTop="12dp"
                            android:background="@drawable/edittext_bkg"
                            android:drawablePadding="10dp"
                            android:layout_marginStart="2dp"
                            android:hint="Blood Group"
                            android:inputType="text"
                            android:padding="10dp" />

                        <EditText
                            android:id="@+id/signup_dob1"
                            android:layout_width="150dp"
                            android:layout_height="45dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="155dp"
                            android:layout_marginTop="12dp"
                            android:background="@drawable/edittext_bkg"
                            android:drawablePadding="10dp"
                            android:hint="D.O.B"
                            android:inputType="date"
                            android:padding="10dp" />

                        <EditText
                            android:id="@+id/signup_state1"
                            android:layout_width="150dp"
                            android:layout_height="45dp"
                            android:layout_below="@id/signup_bldgrp1"
                            android:layout_marginStart="2dp"
                            android:layout_marginTop="12dp"
                            android:background="@drawable/edittext_bkg"
                            android:drawablePadding="10dp"
                            android:hint="State"
                            android:inputType="text"
                            android:padding="10dp" />

                        <EditText
                            android:layout_width="150dp"
                            android:layout_height="45dp"
                            android:id="@+id/signup_district1"
                            android:layout_below="@id/signup_bldgrp1"
                            android:layout_marginTop="12dp"
                            android:padding="10dp"
                            android:layout_marginStart="155dp"
                            android:hint="District"
                            android:inputType="text"
                            android:drawablePadding="10dp"
                            android:background="@drawable/edittext_bkg"/>

                        <EditText
                            android:id="@+id/signup_city1"
                            android:layout_width="150dp"
                            android:layout_height="45dp"
                            android:layout_below="@id/signup_state1"
                            android:layout_gravity="center"
                            android:layout_marginStart="2dp"
                            android:layout_marginTop="12dp"
                            android:background="@drawable/edittext_bkg"
                            android:drawablePadding="10dp"
                            android:hint="City"
                            android:inputType="text"
                            android:padding="10dp" />

                        <EditText
                            android:layout_width="150dp"
                            android:layout_height="45dp"
                            android:layout_gravity="center"
                            android:id="@+id/signup_village1"
                            android:layout_marginTop="12dp"
                            android:layout_marginStart="155dp"
                            android:padding="10dp"
                            android:hint="Village"
                            android:layout_below="@id/signup_state1"
                            android:inputType="text"
                            android:drawablePadding="10dp"
                            android:background="@drawable/edittext_bkg"/>

                    </RelativeLayout>




                    <Button
                android:id="@+id/su1"
                android:layout_width="300dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginTop="25dp"
                android:backgroundTint="@color/purple"
                android:text="Signup"
                android:textSize="22sp"
                app:cornerRadius="30dp" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="Already Have An Account ?"
                android:textSize="18sp" />

            <Button
                android:id="@+id/loginbtn1"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:backgroundTint="@color/purple"
                android:text="Log in"
                android:textAppearance="?android:attr/textAppearanceMedium"
                app:cornerRadius="30dp" />


        </LinearLayout>


    </ScrollView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/back"
    tools:context=".contactus">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal"
            android:padding="24dp">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"

                android:src="@drawable/logo"
                android:layout_marginHorizontal="80dp"
                android:layout_marginTop="-40dp"
                android:layout_marginBottom="-15dp"

                />


            <TextView
                android:id="@+id/loginText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="-25dp"
                android:text="Contact Us"
                android:textAlignment="center"
                android:textColor="@color/purple"
                android:textSize="36sp"
                android:textStyle="bold" />
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginTop="30dp"
                android:layout_height="50dp"
                android:layout_gravity="fill"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp"

                >

            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_baseline_call_24"
                android:drawablePadding="16dp"
                android:hint="000-0000000"
                android:layout_gravity="center"
                android:padding="9dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"
                android:textSize="19dp" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginTop="30dp"
                android:layout_height="50dp"
                android:layout_gravity="fill"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp"

                >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/password"
                android:drawableLeft="@drawable/ic_baseline_call_24"
                android:drawablePadding="16dp"
                android:hint="1234567890"
                android:padding="9dp"
                android:layout_gravity="center"
                android:textSize="19dp"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginTop="30dp"
                android:layout_height="50dp"
                android:layout_gravity="fill"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="10dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp"

                >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mail"
                android:drawableLeft="@drawable/ic_baseline_email_24"
                android:drawablePadding="16dp"
                android:hint="yuvasarthi@gmail.com"
                android:padding="9dp"
                android:layout_gravity="center"
                android:textSize="19dp"

                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textColorHighlight="@color/cardview_dark_background"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/signupText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="100dp"
                android:layout_marginTop="15dp"
                android:text="Follow us on"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <Button
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/facebookbutton"

                android:background="@drawable/facebook"

                android:layout_marginTop="30dp"
                android:layout_marginHorizontal="40dp"
                app:cornerRadius = "20dp"/>

            <Button
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:id="@+id/twitterbutton"


                android:layout_marginTop="-50dp"
                android:background="@drawable/twitter"
                android:layout_marginHorizontal="127dp"
                app:cornerRadius = "20dp"/>

            <Button
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:id="@+id/instabutton"

                android:layout_marginTop="-52dp"
                android:background="@drawable/instagram"
                android:layout_marginHorizontal="215dp"
                app:cornerRadius = "20dp"/>






        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Open at 9am - 5pm every Monday - Friday"
        android:textSize="18sp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:layout_marginBottom="20dp"/>




</LinearLayout>